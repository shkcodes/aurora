<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splash">

    <fragment
        android:id="@+id/splash"
        android:name="com.shkcodes.aurora.ui.splash.SplashFragment"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/move_to_login"
            app:destination="@id/login" />
        <action
            android:id="@+id/move_to_home"
            app:destination="@id/home" />
    </fragment>

    <fragment
        android:id="@+id/login"
        android:name="com.shkcodes.aurora.ui.login.LoginFragment"
        tools:layout="@layout/fragment_login" />

    <fragment
        android:id="@+id/home"
        android:name="com.shkcodes.aurora.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home" />

</navigation>
